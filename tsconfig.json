{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": false,
        "sourceMap": true,
        "outDir": "./dist",
        "target": "ESNext",
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}